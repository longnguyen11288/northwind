<h1>Store#index</h1>

<%= form_tag("/store/search", :method => "get") do %>
    <%= label_tag(:name, "Search for product by name:") %>
    <%= text_field_tag(:name) %>
    <%= submit_tag("Search") %>
<% end %>

<%= form_tag("/store/show", :method => "get") do %>
    <%= label_tag(:country, "Show customer by country:") %>
    <%= text_field_tag(:country) %>
    <%= submit_tag("Browse") %>
<% end %>

<%= form_tag("/store/subordinates", :method => "get") do %>
    <%= label_tag(:lastname, "Show employee subordinates by last name") %>
    <%= text_field_tag(:lastname) %>
    <%= submit_tag("Show") %>
<% end %>